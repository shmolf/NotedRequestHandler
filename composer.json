{
  "name": "shmolf/noted-request-handler",
  "type": "library",
  "description": "Designed to receive requests from note-d.app, and objectify them.",
  "keywords": [
    "shmolf",
    "noted-request-handler"
  ],
  "homepage": "https://github.com/shmolf/noted-request-handler",
  "license": "MIT",
  "authors": [
    {
      "name": "Nicholas Browning",
      "email": "shmolf@gmail.com",
      "homepage": "https://shmolf.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "opis/json-schema": "^2.0",
    "ramsey/uuid": "^4.1"
  },
  "require-dev": {
    "phpunit/phpunit" : ">=8.0",
    "squizlabs/php_codesniffer": "^3.0",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "shmolf\\NotedRequestHandler\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "shmolf\\NotedRequestHandler\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "fix-style": "phpcbf",
    "lint": [
      "phpcs",
      "psalm --php-version=7.4"
    ],
    "suite": [
      "@lint",
      "@test"
    ],
    "psalm-more-info": "psalm --php-version=7.4 --show-info=true"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
